
<div class="col-sm-4 pb-4 product_index">
  <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
  <div class="row">
    <div class="col-md-12">
      <p><h3><%= link_to product.name, product %></h3></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p><%= product.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <p>Color: <%= product.colour %></p>
    </div>
    <div class="col-md-6">
      <p>Size: <%= product.size %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p>&#36;<%= product.price %></p>
    </div>
  </div>

  <% if signed_in? && current_user.admin? %>
  <p><%= link_to 'Show', product %></p>
  <p><%= link_to 'Edit', edit_product_path(product) %></p>
  <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div><!-- /col -->
