<p id="notice"><%= notice %></p>

<section class="row product_show" data-product-id="<%= @product.id %>">
	<div class="col-sm-6 img">
		<%= image_tag(@product.image_url, class: "img-fluid img-zoom", data_zoom_image:@product.image_url) %>
  </div>

  <section class="col-sm-6">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>

    <p>
      <strong>Size:</strong>
      <%= @product.size %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>

		<p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>

		<%= form_with(url: '/payments/create') do |form| %>
		<%= form.hidden_field :product_id, :value => @product.id %>
		<%= render partial: "shared/stripe_checkout_button" %>
		<% end %>
		<% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
		<% end %>
    <%= link_to 'Back', products_path %>
		<%#= @product.get_recent_views %>
  </section> <!-- /col-sm-6 -->

	<div class="col-lg-12 comments">
	  <%#= @product.highest_rating_comment %>
	  <%#= @product.lowest_rating_comment %>

		<%= render 'new_comment' %>
		<div class ="comment_block">
			<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
			<%= render 'comments' %>
			<%= will_paginate @comments %>
		</div>
	</div>
</section> <!-- /row product_show -->
