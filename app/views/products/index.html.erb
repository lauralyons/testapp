
<h1>Products</h1>
<p id="notice"><%= notice %></p>
<thead>
   <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Image url</th>
     <th>Colour</th>
     <th>Price</th>
     <th colspan="3"></th>
   </tr>
 </thead>


<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
</div>


<br>

<%= link_to 'New Product', new_product_path %>
