<p id="notice"><%= notice %></p>

<h1>Products</h1>

<thead>
   <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Image url</th>
     <th>Colour</th>
     <th>Price</th>
     <th colspan="3"></th>
   </tr>
 </thead>


<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
        <a href="#"><h1><%= product.name %></h1></a>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <p><%= product.price %></p>
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- /col -->
    <% end %>
  </div>
</div>


<br>

