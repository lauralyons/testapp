<h1>Contact Us</h1>
<p class="center_p">Let's Talk! Have a question about an item in our online store? Looking for order support? Send us a message here.</p>
<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">
  <div class="col-xl-8 offset-xl-2">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5, required: true %>
    </div>

<div class="form-group">
    <%= form.submit "Send", class: "form_label actions btn btn-primary btn-lg" %>
  </div>
</div>
</div>
</div>
<% end %>
