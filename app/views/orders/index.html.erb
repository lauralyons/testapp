<div class="container_outer">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm">
        <h1>Order # <%= order.id %></h1>
      </div><!-- /col -->
    <% end %>
  </div>

  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm">
        <h3>
          Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h3>
        <p><%= order.product.description %></p>
        <strong>$ <%= order.product.price %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
