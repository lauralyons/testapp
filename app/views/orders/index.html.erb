<div class="container_outer" id="order_show">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm">
        <h2>Order # <%= order.id %></h2>
      </div><!-- /col -->
    <% end %>
  </div>

  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm">
        <h5>
          Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h5>
        <p><%= order.product.description %></p>
        <strong>$ <%= order.product.price %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
